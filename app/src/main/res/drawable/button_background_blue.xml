<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorBaseBlueDark"
                android:centerColor="#616F94"
                android:endColor="#616F94"
                android:angle="270" />
            <corners android:bottomLeftRadius="10dp"
                android:topRightRadius="10dp"/>
            />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="@color/colorBaseBlue"
                android:centerColor="@color/colorBaseBlue"
                android:endColor="@color/colorBaseBlueDark"
                android:angle="270" />
            <corners android:bottomLeftRadius="10dp"
                android:topRightRadius="10dp"/>
            />
        </shape>
    </item>
</selector>